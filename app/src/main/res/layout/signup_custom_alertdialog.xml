<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="30sp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:layout_marginTop="20sp"
            android:textColor="#0081cb"
            android:textSize="30sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:layout_weight="2">

        <EditText
            android:id="@+id/UsernameETID"
            android:layout_width="250sp"
            android:layout_height="45sp"
            android:hint="Username"
            android:textSize="23sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/customize_edittext"
            android:paddingLeft="10sp"/>
        <EditText
            android:id="@+id/EmailETID"
            android:layout_width="250sp"
            android:layout_height="45sp"
            android:hint="Email"
            android:textSize="23sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/customize_edittext"
            android:paddingLeft="10sp"/>
        <EditText
            android:id="@+id/PasswordETID"
            android:layout_width="250sp"
            android:layout_height="45sp"
            android:hint="Password"
            android:textSize="23sp"
            android:layout_marginTop="20sp"
            android:inputType="textPassword"
            android:background="@drawable/customize_edittext"
            android:paddingLeft="10sp"/>

        <EditText
            android:id="@+id/ConfirmPassETID"
            android:layout_width="250sp"
            android:layout_height="45sp"
            android:textSize="23sp"
            android:inputType="textPassword"
            android:hint="Confirm password"
            android:layout_marginTop="20sp"
            android:background="@drawable/customize_edittext"
            android:paddingLeft="10sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="40sp"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/SubmitbtnID"
            android:layout_width="250sp"
            android:layout_height="45sp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="25sp"
            android:text="Submit"
            android:background="@drawable/customize_edittext"
            android:backgroundTint="#0081cb"
            />
        <TextView
            android:layout_width="100sp"
            android:layout_height="30sp"/>
    </LinearLayout>


</LinearLayout>